<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout_parent"
              android:orientation="vertical"
              android:layout_width="480px"
              android:layout_height="800px"
        >
    <ImageView
            android:layout_marginTop="20px"
            android:layout_width="120px"
               android:layout_height="145px"
               android:layout_centerHorizontal="true"
               android:background="@drawable/logo_red"
               android:id="@+id/ivMark"
            />

    <LinearLayout
            android:layout_below="@+id/ivMark"
            android:layout_marginTop="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <LinearLayout
                android:id="@+id/llBluetooth"
                android:layout_marginTop="20px"
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:orientation="horizontal"
                android:background="#303030"
                android:gravity="center"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/title_bluetooth"
                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/llCalibrate"
                android:layout_marginTop="20px"
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:orientation="horizontal"
                android:background="#303030"
                android:gravity="center"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/title_calibrate"
                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/llProgram"
                android:layout_marginTop="20px"
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:orientation="horizontal"
                android:background="#303030"
                android:gravity="center"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/title_program"
                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/llSettings"
                android:layout_marginTop="20px"
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:orientation="horizontal"
                android:background="#303030"
                android:gravity="center"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/title_settings"
                    />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

